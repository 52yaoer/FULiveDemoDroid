<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/beauty_seek_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@color/percent50translucentBlack"
        android:padding="@dimen/x16"
        android:visibility="gone">

        <com.faceunity.fulivedemo.ui.seekbar.DiscreteSeekBar
            android:id="@+id/beauty_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:dsb_indicatorColor="@color/main_color"
            app:dsb_indicatorElevation="0dp"
            app:dsb_indicatorPopupEnabled="true"
            app:dsb_max="100"
            app:dsb_min="0"
            app:dsb_progressColor="@color/main_color"
            app:dsb_scrubberHeight="@dimen/x4"
            app:dsb_thumbSize="@dimen/x32"
            app:dsb_value="0"/>
    </FrameLayout>

    <RadioGroup
        android:id="@+id/face_shape_radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@color/percent50translucentBlack"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/face_shape_3_default"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/face_shape_text_background_color"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="默认"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text_size"/>

        <RadioButton
            android:id="@+id/face_shape_0_nvshen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/face_shape_text_background_color"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="女神"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text_size"/>

        <RadioButton
            android:id="@+id/face_shape_1_wanghong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/face_shape_text_background_color"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="网红"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text_size"/>

        <RadioButton
            android:id="@+id/face_shape_2_ziran"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/face_shape_text_background_color"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="自然"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text_size"/>

        <RadioButton
            android:id="@+id/face_shape_4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x20"
            android:background="@drawable/face_shape_text_background_color"
            android:button="@null"
            android:gravity="center"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:text="自定义"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text_size"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/beauty_mid_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x220"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/percent50translucentBlack"
        android:visibility="gone">

        <HorizontalScrollView
            android:id="@+id/skin_beauty_select_block"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/beauty_all_blur_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/beauty_all_blur_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_skin_control_all_blur_normal"/>

                    <TextView
                        android:id="@+id/beauty_all_blur_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="精准美肤"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/beauty_type_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/beauty_type_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_skin_control_type_checked"/>

                    <TextView
                        android:id="@+id/beauty_type_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="清晰磨皮"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/beauty_blur_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/beauty_blur_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_skin_control_blur_normal"/>

                    <TextView
                        android:id="@+id/beauty_blur_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="磨皮"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/beauty_color_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/beauty_color_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_skin_control_color_normal"/>

                    <TextView
                        android:id="@+id/beauty_color_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="美白"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/beauty_red_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/beauty_red_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_skin_control_red_normal"/>

                    <TextView
                        android:id="@+id/beauty_red_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="红润"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bright_eyes_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/bright_eyes_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_skin_control_bright_eyes_normal"/>

                    <TextView
                        android:id="@+id/bright_eyes_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="亮眼"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/beauty_teeth_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/beauty_teeth_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_skin_control_teeth_normal"/>

                    <TextView
                        android:id="@+id/beauty_teeth_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="美牙"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/face_shape_select_block"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scrollbars="none"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/face_shape_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/face_shape_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_type_control_face_shape_normal"/>

                    <TextView
                        android:id="@+id/face_shape_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="脸型"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/enlarge_eye_level_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/enlarge_eye_level_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_type_control_enlarge_eye_level_normal"/>

                    <TextView
                        android:id="@+id/enlarge_eye_level_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="大眼"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cheekthin_level_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cheekthin_level_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_type_control_cheekthin_level_normal"/>

                    <TextView
                        android:id="@+id/cheekthin_level_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="瘦脸"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chin_level_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/chin_level_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_type_control_chin_level_normal"/>

                    <TextView
                        android:id="@+id/chin_level_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="下巴"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/forehead_level_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/forehead_level_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_type_control_forehead_level_normal"/>

                    <TextView
                        android:id="@+id/forehead_level_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="额头"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/thin_nose_level_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/thin_nose_level_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_type_control_thin_nose_level_normal"/>

                    <TextView
                        android:id="@+id/thin_nose_level_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="瘦鼻"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mouth_shape_linear"
                    android:layout_width="@dimen/x170"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mouth_shape_linear_img"
                        android:layout_width="@dimen/x120"
                        android:layout_height="@dimen/x120"
                        android:padding="@dimen/x8"
                        android:scaleType="centerCrop"
                        android:src="@drawable/beauty_type_control_mouth_shape_normal"/>

                    <TextView
                        android:id="@+id/mouth_shape_linear_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="嘴型"
                        android:textColor="@color/main_color_c5c5c5"
                        android:textSize="@dimen/min_text_size"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/effect_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/beauty_radio_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:layout_marginTop="@dimen/x2"
        android:background="@color/percent50translucentBlack"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/beauty_radio_skin_beauty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:button="@null"
            android:gravity="center"
            android:text="美肤"
            android:textColor="@color/main_color_c5c5c5"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:id="@+id/beauty_radio_face_shape"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:button="@null"
            android:gravity="center"
            android:text="美型"
            android:textColor="@color/main_color_c5c5c5"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:id="@+id/beauty_radio_beauty_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:button="@null"
            android:gravity="center"
            android:text="美颜滤镜"
            android:textColor="@color/main_color_c5c5c5"
            android:textSize="@dimen/normal_text_size"/>

        <TextView
            android:id="@+id/beauty_radio_filter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Transparent"
            android:button="@null"
            android:gravity="center"
            android:text="滤镜"
            android:textColor="@color/main_color_c5c5c5"
            android:textSize="@dimen/normal_text_size"/>
    </LinearLayout>
</LinearLayout>