<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/x16"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="@dimen/x242"
        android:layout_height="@dimen/x292"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_recycler_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="182"
            android:background="@drawable/main_recycler_item_background"
            android:paddingBottom="@dimen/x65"
            android:paddingLeft="@dimen/x67"
            android:paddingRight="@dimen/x67"
            android:paddingTop="@dimen/x65"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/home_recycler_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="62"
            android:background="@drawable/main_recycler_item_text_background"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="13sp"/>
    </LinearLayout>
</FrameLayout>
